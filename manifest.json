{
  "manifest_version": 3,
  "name": "Annotation App",
  "version": "1.0",
  "description": "Annotate web pages and sync annotations across devices.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "identity",
    "sidePanel",
    "tabs"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "Open Annotation App"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "oauth2": {
    "client_id": "YOUR_GOOGLE_CLIENT_ID",
    "scopes": ["profile", "email"]
  }
}
